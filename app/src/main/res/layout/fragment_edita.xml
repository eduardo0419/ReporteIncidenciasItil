<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragment.EditaFragment">
    <TextView
        android:text="Actualizar Incidencia"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:id="@+id/textView5"
        android:textSize="15dp"
        android:gravity="center"
        android:textStyle="bold"
        android:textColor="@color/black"/>
    <TextView
        android:text="Nuevo Estado"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:id="@+id/textView1"
        android:layout_marginLeft="20dp"
        android:textSize="13dp"
        android:gravity="left"
        android:textStyle="bold"
        android:textColor="@color/black"/>
    <Spinner
        android:layout_marginTop="5dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/spinner2" />
    <TextView
        android:text="Reasignar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:id="@+id/textView2"
        android:layout_marginLeft="20dp"
        android:textSize="13dp"
        android:gravity="left"
        android:textStyle="bold"
        android:textColor="@color/black"/>
    <Spinner
        android:layout_marginTop="5dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/spinner3" />
    <TextView
        android:text="Nota de resolucion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:id="@+id/tere"
        android:layout_marginLeft="20dp"
        android:textSize="13dp"
        android:gravity="left"
        android:textStyle="bold"
        android:visibility="gone"
        android:textColor="@color/black"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txt_resul"
        android:visibility="gone"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:theme="@style/EstiloBoton"
        android:layout_marginTop="10dp"/>
    <Button
        android:text="actualizar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btn_act"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:theme="@style/EstiloBoton"
        android:layout_marginTop="10dp"/>

</LinearLayout>
